{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "params": [
        {
            "name": "Filter_Year",
            "value": [
                2021
            ],
            "bind": {
                "input": "range",
                "min": 2018,
                "max": 2021,
                "step": 1,
                "name": "Year:"
            }
        }
    ],
    "width": 500,
    "height": 400,
    "title": "Life Expectancy for the Most and Least Populated Countries",
    "data": {
        "url": "https://raw.githubusercontent.com/vlay0005/Assignment_2/main/data/Global%20Population%20Trends(2016-2022).csv"
    },
    "layer": [
        {
    "transform": [
        {
            "filter": {
                "field": "Country",
                "oneOf": [
                    "British Virgin Islands",
                    "China",
                    "Gibraltar",
                    "India",
                    "Indonesia",
                    "Nauru",
                    "Pakistan",
                    "St. Martin (French Part)",
                    "Tuvalu",
                    "United States"
                ]
            }
        },
        {
            "filter": "datum.Year == Filter_Year"
        }
    ],
    "mark": "bar",
    "encoding": {
        "x": {
            "field": "Country",
            "type": "nominal"
        },
        "y": {
            "field": "Life Expectancy",
            "type": "quantitative"
        },
        "color": {
            "field": "Country",
            "type": "nominal"
        },
        "tooltip": [
            {
                "field": "Country",
                "type": "nominal",
                "title": "Country"
            },
            {
                "field": "Total_Population",
                "type": "ordinal",
                "title": "Population",
                "format": ","
            },
            {
                "field": "Life Expectancy",
                "type": "quantitative",
                "title": "Life Expectancy"
            }
        ]
    }
},
{
    "mark": {
        "type": "rule",
        "strokeDash": [
            4,
            4
        ],
        "size": 3
    },
    "transform": [
        {
            "filter": "datum.Year == Filter_Year"
        }
    ],
    "encoding": {
        "y": {
            "aggregate": "mean",
            "field": "Life Expectancy",
            "title": "Life Expectancy"
        },
        "color": {
            "value": "blue"
        },
        "size": {
            "value": 4
        }
    }
}
    ]
} 
