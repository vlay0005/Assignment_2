{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "width": 600,
    "height": 400,
    "title": "Birth Rates per 1000 People and Fertility Rates for the Most and Least Populated Countries",
    "data": {
        "url": "https://raw.githubusercontent.com/vlay0005/Assignment_2/main/data/Global%20Population%20Trends(2016-2022).csv"
    },
    "layer": [
        {
            "transform": [
                {
                    "filter": "datum.Birth_Rate > 0"
                },
                {
                    "filter": "datum.Fertility_Rate > 0"
                },
                {
                    "filter": "datum.Year == Filter_Year"
                },
                {
                    "window": [
                        {
                            "op": "rank",
                            "as": "rank"
                        }
                    ],
                    "sort": [
                        {
                            "field": "Total_Population",
                            "order": "descending"
                        }
                    ]
                },
                {
                    "joinaggregate": [
                        {
                            "op": "max",
                            "field": "rank",
                            "as": "total"
                        }
                    ]
                },
                {
                    "filter": "(datum.rank > datum.total - 5) || (datum.rank <= 5)"
                }
            ],
            "mark": {
                "type": "circle",
                "opacity": 0.6
            },
            "encoding": {
                "x": {
                    "field": "Birth_Rate",
                    "type": "quantitative",
                    "title": "Birth Rate"
                },
                "y": {
                    "field": "Fertility_Rate",
                    "type": "quantitative",
                    "title": "Fertility Rate"
                },
                "color": {
                    "field": "Country",
                    "type": "nominal"
                },
                "size": {
                    "field": "Total_Population",
                    "type": "quantitative",
                    "aggregate": "max",
                    "scale": {
                        "type": "threshold",
                        "domain": [
                            1000000,
                            100000000,
                            200000000,
                            500000000,
                            1000000000
                        ],
                        "range": [
                            50,
                            200,
                            600,
                            1200,
                            2000,
                            3000
                        ]
                    },
                    "legend": {
                        "title": "Total Population",
                        "format": ".1s"
                    }
                },
                "tooltip": [
                    {
                        "field": "Country",
                        "type": "nominal",
                        "title": "Country"
                    },
                    {
                        "field": "Total_Population",
                        "type": "ordinal",
                        "title": "Population",
                        "format": ","
                    },
                    {
                        "field": "Birth_Rate",
                        "type": "quantitative",
                        "title": "Birth Rate"
                    },
                    {
                        "field": "Fertility_Rate",
                        "type": "quantitative",
                        "title": "Fertility Rate"
                    }
                ]
            }
        },
        {
            "mark": {"type": "rule", "strokeDash": [4, 4], "size": 3},
            "transform": [
                {
                    "filter": "datum.Year == Filter_Year"
                }
            ],
            "encoding": {
                "x": {
                    "aggregate": "mean",
                    "field": "Birth_Rate"
                },
                "color": {
                    "value": "blue"
                },
                "size": {
                    "value": 4
                }
            }
        }
    }